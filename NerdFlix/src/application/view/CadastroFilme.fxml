<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="460.0" prefWidth="350.0" styleClass="background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.CadastroFilmeController">
   <children>
      <VBox layoutX="24.0" layoutY="14.0" spacing="30.0">
         <children>
            <Label text="Título:" />
            <Label text="Sinopse:" />
            <Label text="Gênero:" />
            <Label text="Duração:" />
            <Label text="Resolução:" />
            <Label text="Thumb:" />
            <Label text="Path:" />
         </children>
      </VBox>
      <VBox layoutX="99.0" layoutY="9.0" spacing="20.0">
         <children>
            <TextField fx:id="tituloTextF" />
            <TextField fx:id="sinopseTextF" />
            <TextField fx:id="generoTextF" />
            <TextField fx:id="duracaoTextF" />
            <TextField fx:id="resolucaoTextF" />
            <TextField fx:id="thumbTextF" />
            <TextField fx:id="pathTextF" />
         </children>
      </VBox>
      <HBox layoutX="43.0" layoutY="413.0" spacing="50.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCadastrarButton" text="Cadastrar" />
            <Button mnemonicParsing="false" onAction="#handleCancelarButton" text="Cancelar" />
         </children>
      </HBox>
      <Button layoutX="286.0" layoutY="262.0" mnemonicParsing="false" onAction="#handleChooseThumbButton" prefHeight="10.0" prefWidth="10.0" text="..." />
      <Button layoutX="286.0" layoutY="313.0" mnemonicParsing="false" onAction="#handleChoosePathButton" prefHeight="10.0" prefWidth="10.0" text="..." />
      <HBox layoutX="44.0" layoutY="374.0" spacing="100.0">
         <children>
            <RadioButton fx:id="filmeRadioB" mnemonicParsing="false" text="Filme">
               <toggleGroup>
                  <ToggleGroup fx:id="group" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="serieRadioB" mnemonicParsing="false" text="Série" toggleGroup="$group" />
         </children>
      </HBox>
   </children>
</AnchorPane>
